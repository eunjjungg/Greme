<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/challengeSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin24"
        android:background="@drawable/drawable_challenge_summary"
        android:backgroundTint="@color/challenge_summary_bg"
        android:backgroundTintMode="add">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_challenge_my"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin24"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="@+id/icon">

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text10"
                android:text="인기 챌린지 후기 보러가기"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_marginTop="@dimen/margin8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text12"
                android:textColor="@color/challenge_summary_main"
                android:text="# 투명페트병_생수_이용하기"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>